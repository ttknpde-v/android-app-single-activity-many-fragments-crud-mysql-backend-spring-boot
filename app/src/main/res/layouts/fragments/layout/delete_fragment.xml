<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textSize="40dp"
                app:layout_constraintTop_toTopOf="@id/constraintMain"
                android:text="Remove gadget by ID"/>

        <androidx.cardview.widget.CardView
                android:id="@+id/cardViewMain"
                app:layout_constraintTop_toBottomOf="@id/textViewTitle"
                app:cardCornerRadius="20sp"
                app:cardBackgroundColor="#BBA4BF"
                android:layout_width="400dp"
                android:layout_height="320dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxBackgroundColor="#F1F1F1"
                        app:boxCornerRadiusTopStart="20sp"
                        app:boxCornerRadiusBottomStart="20sp"
                        app:boxCornerRadiusTopEnd="20sp"
                        app:boxCornerRadiusBottomEnd="20sp"
                        android:id="@+id/textInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:textColorHint="#5F4763"
                        android:layout_marginTop="40dp">
                    <!-- always work together -->
                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/textInputEdit"
                            android:textSize="35sp"
                            android:padding="30sp"
                            android:textStyle="bold"
                            android:inputType="textShortMessage"
                            android:textColor="@color/black"
                            android:hint="Put the gadget id..."
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/appCompatButton"
                        android:scaleType="fitCenter"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:textColor="#5F4763"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:text="remove"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:layout_marginTop="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/cricle"
                />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TableLayout
                android:background="#BBA4BF"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/tableLayout"
                android:layout_marginTop="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardViewMain">

            <TableRow>
                <TextView
                        android:background="@drawable/row_head"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:text="Gadget ID"/>

                <TextView
                        android:background="@drawable/row_head"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_height="30dp"
                        android:layout_width="0dp"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:text="Brand"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"/>

                <TextView
                        android:background="@drawable/row_head"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_height="30dp"
                        android:layout_width="0dp"
                        android:layout_column="2"
                        android:layout_weight="1"
                        android:text="Model"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"/>
                <TextView
                        android:background="@drawable/row_head"
                        android:layout_height="30dp"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_width="0dp"
                        android:layout_column="2"
                        android:layout_weight="1"
                        android:text="Price"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"/>
            </TableRow>

            <TableRow
                    android:id="@+id/tableRowGadget"
                    android:background="@drawable/row"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:textColor="#808080"
                        android:paddingLeft="5dp"
                        android:clickable="true"
                        android:id="@+id/textViewGadgetId"
                        android:layout_width="0dp"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:textSize="20dp"
                />

                <TextView
                        android:textColor="#808080"
                        android:paddingLeft="5dp"
                        android:clickable="true"
                        android:id="@+id/textViewGadgetBrand"
                        android:layout_width="0dp"
                        android:layout_column="1"
                        android:textSize="20dp"
                        android:layout_weight="1"
                />

                <TextView
                        android:textColor="#808080"
                        android:paddingLeft="5dp"
                        android:clickable="true"
                        android:id="@+id/textViewGadgetModel"
                        android:layout_width="0dp"
                        android:layout_column="2"
                        android:maxLines="1"
                        android:textSize="20dp"
                        android:layout_weight="1"
                        android:baselineAligned="false"
                />
                <TextView
                        android:textColor="#808080"
                        android:paddingLeft="5dp"
                        android:id="@+id/textViewGadgetPrice"
                        android:layout_width="0dp"
                        android:layout_column="2"
                        android:layout_weight="1"
                        android:textSize="20dp"
                        android:baselineAligned="false"
                />
            </TableRow>
        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>