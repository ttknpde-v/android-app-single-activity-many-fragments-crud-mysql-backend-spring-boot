<?xml version="1.0" encoding="utf-8"?>
<!-- need to use layout
    this layout will appear on tag fragment
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textSize="40dp"
                app:layout_constraintTop_toTopOf="@id/constraintMain"
                android:text="Form create gadget"/>
        <androidx.cardview.widget.CardView
                android:id="@+id/cardViewMain"
                app:layout_constraintTop_toBottomOf="@id/textViewTitle"
                app:cardCornerRadius="20sp"
                app:cardBackgroundColor="#BBA4BF"
                android:layout_width="700dp"
                android:layout_height="670dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxBackgroundColor="#F1F1F1"
                        app:boxCornerRadiusTopStart="20sp"
                        app:boxCornerRadiusBottomStart="20sp"
                        app:boxCornerRadiusTopEnd="20sp"
                        app:boxCornerRadiusBottomEnd="20sp"
                        android:id="@+id/textInputLayoutGadgetId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:textColorHint="#5F4763"
                        android:layout_marginTop="20dp">
                    <!-- always work together -->
                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/textInputEditGadgetId"
                            android:textSize="35sp"
                            android:padding="30sp"
                            android:textStyle="bold"
                            android:inputType="textShortMessage"
                            android:textColor="@color/black"
                            android:hint="Put the gadget id..."
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxBackgroundColor="#F1F1F1"
                        app:boxCornerRadiusTopStart="20sp"
                        app:boxCornerRadiusBottomStart="20sp"
                        app:boxCornerRadiusTopEnd="20sp"
                        app:boxCornerRadiusBottomEnd="20sp"
                        android:id="@+id/textInputLayoutGadgetBrand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:textColorHint="#5F4763"
                        android:layout_marginTop="20dp">
                    <!-- always work together -->
                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/textInputEditGadgetBrand"
                            android:textSize="35sp"
                            android:padding="30sp"
                            android:textStyle="bold"
                            android:inputType="textShortMessage"
                            android:textColor="@color/black"
                            android:hint="Put the gadget brand..."
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxBackgroundColor="#F1F1F1"
                        app:boxCornerRadiusTopStart="20sp"
                        app:boxCornerRadiusBottomStart="20sp"
                        app:boxCornerRadiusTopEnd="20sp"
                        app:boxCornerRadiusBottomEnd="20sp"
                        android:id="@+id/textInputLayoutGadgetModel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:textColorHint="#5F4763"
                        android:layout_marginTop="20dp">
                    <!-- always work together -->
                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/textInputEditGadgetModel"
                            android:textSize="35sp"
                            android:padding="30sp"
                            android:textStyle="bold"
                            android:inputType="textShortMessage"
                            android:textColor="@color/black"
                            android:hint="Put the gadget model..."
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxBackgroundColor="#F1F1F1"
                        app:boxCornerRadiusTopStart="20sp"
                        app:boxCornerRadiusBottomStart="20sp"
                        app:boxCornerRadiusTopEnd="20sp"
                        app:boxCornerRadiusBottomEnd="20sp"
                        android:id="@+id/textInputLayoutGadgetPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:textColorHint="#5F4763"
                        android:layout_marginTop="20dp">
                    <!-- always work together -->
                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/textInputEditGadgetPrice"
                            android:textSize="35sp"
                            android:padding="30sp"
                            android:textStyle="bold"
                            android:inputType="numberDecimal"
                            android:textColor="@color/black"
                            android:hint="Put the gadget price..."
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/appCompatButton"
                        android:scaleType="fitCenter"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:textColor="#5F4763"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:text="send"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:background="@drawable/cricle"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>